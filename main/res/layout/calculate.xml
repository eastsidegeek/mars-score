<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Score"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Base Terraform Rating"
        android:layout_below="@+id/textViewPlayer"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextTR"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="20" />

    <EditText
        android:id="@+id/editTextMilestone"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <EditText
        android:id="@+id/editTextAward"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <EditText
        android:id="@+id/editTextGreenery"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <EditText
        android:id="@+id/editTextAdjacency"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView7"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <EditText
        android:id="@+id/editTextCardPoints"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="0" />

    <Button
        android:id="@+id/buttonTRDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="-"
        android:layout_alignBaseline="@+id/editTextTR"
        android:layout_alignBottom="@+id/editTextTR"
        android:layout_toEndOf="@+id/editTextTR" />

    <Button
        android:id="@+id/buttonMilestoneDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextMilestone"
        android:layout_toEndOf="@+id/editTextMilestone"
        android:minWidth="44dip"
        android:text="-" />

    <Button
        android:id="@+id/buttonAwardDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="-"
        android:layout_above="@+id/textView5"
        android:layout_alignEnd="@+id/buttonCalculate" />

    <Button
        android:id="@+id/buttonAwardDec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="-"
        android:layout_alignBaseline="@+id/buttonAwardInc"
        android:layout_alignBottom="@+id/buttonAwardInc"
        android:layout_toEndOf="@+id/textView10" />

    <Button
        android:id="@+id/buttonGreeneryDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextGreenery"
        android:layout_toEndOf="@+id/editTextGreenery"
        android:minWidth="44dip"
        android:text="-" />

    <Button
        android:id="@+id/buttonAdjacencyDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="-"
        android:layout_alignBottom="@+id/editTextAdjacency"
        android:layout_toEndOf="@+id/editTextAdjacency" />

    <Button
        android:id="@+id/buttonCardPointsDec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextCardPoints"
        android:layout_toEndOf="@+id/editTextCardPoints"
        android:minWidth="44dip"
        android:text="-" />

    <Button
        android:id="@+id/buttonAdjacencyInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonAdjacencyDec"
        android:layout_alignBottom="@+id/buttonAdjacencyDec"
        android:layout_toEndOf="@+id/buttonAdjacencyDec"
        android:minWidth="44dip"
        android:text="+" />

    <Button
        android:id="@+id/buttonCardPointsInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonCardPointsDec"
        android:layout_alignBottom="@+id/buttonCardPointsDec"
        android:layout_toEndOf="@+id/buttonCardPointsDec"
        android:minWidth="44dip"
        android:text="+" />

    <Button
        android:id="@+id/buttonAwardInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="+"
        android:layout_alignBaseline="@+id/buttonAwardDec"
        android:layout_alignBottom="@+id/buttonAwardDec"
        android:layout_toEndOf="@+id/buttonAwardDec" />

    <Button
        android:id="@+id/buttonAwardInc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="+"
        android:layout_alignBaseline="@+id/buttonAwardDec2"
        android:layout_alignBottom="@+id/buttonAwardDec2"
        android:layout_toEndOf="@+id/buttonAwardDec2" />

    <Button
        android:id="@+id/buttonGreeneryInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonGreeneryDec"
        android:layout_alignBottom="@+id/buttonGreeneryDec"
        android:layout_toEndOf="@+id/buttonGreeneryDec"
        android:minWidth="44dip"
        android:text="+" />

    <Button
        android:id="@+id/buttonTRInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="44dip"
        android:text="+"
        android:layout_alignBaseline="@+id/buttonTRDec"
        android:layout_alignBottom="@+id/buttonTRDec"
        android:layout_toEndOf="@+id/buttonTRDec" />

    <Button
        android:id="@+id/buttonMilestoneInc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/buttonMilestoneDec"
        android:layout_alignBottom="@+id/buttonMilestoneDec"
        android:layout_toEndOf="@+id/buttonMilestoneDec"
        android:minWidth="44dip"
        android:text="+" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextTR"
        android:text="Milestone Points" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextMilestone"
        android:text="Award Points" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAward"
        android:text="Owned Greenery Tiles" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextGreenery"
        android:text="Greenery Tiles Adjacent to Owned Cities" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextAdjacency"
        android:text="Card Points" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editTextCardPoints"
        android:text="Calculate!"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textViewPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewTitle"
        android:text="Player"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextAward"
        android:layout_alignBottom="@+id/editTextAward"
        android:layout_toEndOf="@+id/editTextAward"
        android:text="1st - x5" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd - x2"
        android:layout_alignBottom="@+id/space"
        android:layout_toEndOf="@+id/buttonAwardInc" />
</RelativeLayout>